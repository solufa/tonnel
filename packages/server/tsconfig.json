{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "api/@types/$relay.ts", "api/@constants/$relay.ts"]
}
